<html ng-app="ews">
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="../../css/bootstrap.css" rel="stylesheet" type="text/css" media='all'>
    <script src="../../js/jquery-2.1.1.min.js"></script>
    <script src="../../js/bootstrap.min.js"></script>
    <script type="text/javascript" src="../../js/angular.min.js" ></script>
    <script type="text/javascript" src="../../js/angular-route.min.js" ></script>
    <script type="text/javascript" src="../../js/angular-ui-router.js" ></script>
    <script type="text/javascript" src="../../gameBegin.js" ></script>

</head>
<body>
<div  ng-controller="gamebegincontrl">
    <div class="row">
        <div class='col-sm-10'>
            <h2 class="page-header" id="pageTitle">刮刮卡管理</h2>
        </div>
    </div>
    <div class="row">
        <div class='col-sm-1'>
            <h4>活动名称</h4>
        </div>
        <div class='col-sm-3'>
            <input type="text" class="form-control" id="iQueryActivityName" ng-model="queryActivityName">
        </div>
        <div class='col-sm-3'>
            <button type="button" class="btn btn-success"   id="queryItem" ng-click="queryActivityInfo()"> 查询  </button>
        </div>
    </div>

    <div class="row">
        <div class='col-sm-1'></div>
        <div class='col-sm-3'>
            <button type="button" class="btn btn-success" id="addItem" ng-click="addActivityPage(1)">新增刮刮卡活动</button>
        </div>
        <div class='col-sm-1'>
            <button type="button" class="btn btn-success" id="addItem">刷新</button>
        </div>
    </div>
    <table class="table table-striped" ng-controller="gamebegincontrl1">
        <thead>
        <tr>
            <th>活动名称</th>
            <th>活动连接</th>
            <th>关键字名称</th>
            <th>有效参与人数</th>
            <th>总浏览数</th>
            <th>开始/结束时间</th>
            <th>状态</th>
            <th>操作（修改/删除）</th>
        </tr>
        </thead>
        <tbody id="couponTbody" ng-repeat="activityInfo in activityInfos">
            <td ng-model="activityInfo.NAME"></td>
            <td ng-model="activityInfo.GAMEADDRESS"></td>
            <td ng-model="activityInfo.KEYWORDS"></td>
            <td ng-model="activityInfo.PARTICIPATENUM"></td>
            <td ng-model="activityInfo.BROWSENUM"></td>
            <td><p ng-model="activityInfo.BEGINAT"></p><p>/</p><p ng-model="activityInfo.ENDAT"></p></td>
            <td ng-model="activityInfo.STATUS"></td>
            <td>
                <span class="glyphicon glyphicon-file" aria-hidden="true" ng-click="editOneActivity(activityInfo.ACTIVITYID)">修改</span>
                <span class="glyphicon glyphicon-file" aria-hidden="true" ng-click="deleteOneActivity(activityInfo.ACTIVITYID)">删除</span>
            </td>
        </tbody>
    </table>
</div>
<!-- Modal -->
</body>
</html>